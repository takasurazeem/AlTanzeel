        <CollectionView 
            ItemsSource="{Binding SelectedSura.Ayas}" 
            SelectionMode="Multiple"
            >
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Aya">
                    <Frame Padding="10" Margin="5">
                        <!-- <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}}, Path=SelectSurahCommand}"
                                CommandParameter="{Binding .}"
                                />
                        </Frame.GestureRecognizers> -->
                        <Label Text="{Binding AyaWithIndex}" 
                               FontSize="24"
                               HorizontalOptions="End"
                               VerticalOptions="End"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>