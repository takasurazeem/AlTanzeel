<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlTanzeel.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="16,0"
            Spacing="25">

            <Frame>
                <Grid ColumnDefinitions="*, Auto">
                    <Label Text="Quiz Date" Grid.Column="0" />

                    <DatePicker x:Name="QuizDatePicker2"
                Format="MMMM dd, yyyy"
                Grid.Column="1" />
                </Grid>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
